@model List<EComCart.Models.Product>

<h2>Product List</h2>

<a asp-action="Add" class="btn btn-primary">Add Product</a>

<table class="table table-bordered mt-3">

	<tr>
		<th>ID</th>
		<th>Name</th>
		<th>Price</th>
		<th>Quantity</th>
		<th>Actions</th>
	</tr>

	@foreach (var p in Model)
	{
		<tr>

			<td>@p.Id</td>
			<td>@p.Name</td>
			<td>@p.Price</td>
			<td>@p.Quantity</td>

			<td>

				<a asp-action="Details" asp-route-id="@p.Id">Details</a> |

				<a asp-action="Edit" asp-route-id="@p.Id">Edit</a> |

				<a asp-action="Delete" asp-route-id="@p.Id">Delete</a>

			</td>

		</tr>
	}

</table>