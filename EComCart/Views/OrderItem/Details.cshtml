@model EComCart.Models.OrderItem

<h2>Order Item Details</h2>

<div class="card p-3">
    <p><strong>Order:</strong> #@Model.OrderId</p>
    <p><strong>Product:</strong> @Model.Product?.Name</p>
    <p><strong>Quantity:</strong> @Model.Quantity</p>
    <p><strong>Unit Price:</strong> @Model.UnitPrice</p>
    <p><strong>Total Price:</strong> @Model.TotalPrice</p>
</div>

<p class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.OrderItemId" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</p>
