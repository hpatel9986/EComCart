@model EComCart.Models.Customer

<h2>Edit Customer</h2>

<form method="post">

    <!-- Hidden Id -->
    <input type="hidden" asp-for="Id" />

    <div class="form-group">

        <label>Name</label>

        <input asp-for="Name"
               class="form-control" />

        <span asp-validation-for="Name"
              class="text-danger"></span>

    </div>

    <div class="form-group">

        <label>Email</label>

        <input asp-for="Email"
               class="form-control" />

    </div>

    <div class="form-group">

        <label>Phone</label>

        <input asp-for="Phone"
               class="form-control" />

    </div>

    <div class="form-group">

        <label>Address</label>

        <input asp-for="Address"
               class="form-control" />

    </div>

    <br />

    <button type="submit"
            class="btn btn-success">
        Update Customer
    </button>

    <a href="/Customer/Index"
       class="btn btn-secondary">
        Cancel
    </a>

</form>