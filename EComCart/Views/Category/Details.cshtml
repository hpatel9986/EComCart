@model EComCart.Models.Category

<h2>Category Details</h2>

<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <th>Name</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>Description</th>
        <td>@Model.Description</td>
    </tr>
    <tr>
        <th>Created At</th>
        <td>@Model.CreatedAt</td>
    </tr>
</table>

<a href="/Category/Index" class="btn btn-secondary">Back</a>
<a href="/Category/Edit/@Model.Id" class="btn btn-warning">Edit</a>