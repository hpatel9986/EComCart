@model List<EComCart.Models.Category>

<h2>Category List</h2>

<a href="/Category/Add" class="btn btn-primary">Add Category</a>

<table class="table table-bordered mt-3">

	<tr>
		<th>Id</th>
		<th>Name</th>
		<th>Description</th>
		<th>Actions</th>
	</tr>

	@foreach (var item in Model)
	{
		<tr>

			<td>@item.Id</td>

			<td>@item.Name</td>

			<td>@item.Description</td>

			<td>

				<a href="/Category/Edit/@item.Id" class="btn btn-warning">
					Edit
				</a>

				<a href="/Category/Delete/@item.Id"
				   class="btn btn-danger">
					Delete
				</a>

			</td>

		</tr>
	}

</table>