@model EComCart.Models.Order

<h2>Order Details</h2>

<h4>Order Info</h4>

<table class="table table-bordered">
    <tr>
        <th>Order Id</th>
        <td>@Model.OrderId</td>
    </tr>
    <tr>
        <th>Customer</th>
        <td>@Model.Customer?.Name</td>
    </tr>
    <tr>
        <th>Order Date</th>
        <td>@Model.OrderDate</td>
    </tr>
    <tr>
        <th>Total Amount</th>
        <td>@Model.TotalAmount</td>
    </tr>
</table>

<h4>Order Items</h4>

<table class="table table-bordered">
    <tr>
        <th>Product</th>
        <th>Unit Price</th>
        <th>Quantity</th>
        <th>Total</th>
    </tr>

    @foreach (var item in Model.OrderItems)
    {
        <tr>
            <td>@item.Product?.Name</td>
            <td>@item.UnitPrice</td>
            <td>@item.Quantity</td>
            <td>@item.TotalPrice</td>
        </tr>
    }
</table>

<a href="/Order/Index" class="btn btn-secondary">Back</a>
<a href="/Order/Delete/@Model.OrderId" class="btn btn-danger">Delete</a>