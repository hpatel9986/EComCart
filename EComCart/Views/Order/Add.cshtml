@model EComCart.ViewModels.OrderCreateViewModel

<h2>Add Order</h2>

<form asp-action="Add" method="post">

    <div class="mb-3">
        <label class="form-label">Customer</label>
        <select asp-for="CustomerId" asp-items="Model.Customers" class="form-control">
            <option value="">-- Select Customer --</option>
        </select>
        <span asp-validation-for="CustomerId" class="text-danger"></span>
    </div>

    <h4>Products</h4>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Select</th>
                <th>Product</th>
                <th>Price</th>
                <th style="width:140px;">Quantity</th>
            </tr>
        </thead>
        <tbody>
        @for (int i = 0; i < Model.Items.Count; i++)
        {
            <tr>
                <td>
                    <input asp-for="Items[i].Selected" />
                    <input type="hidden" asp-for="Items[i].ProductId" />
                    <input type="hidden" asp-for="Items[i].ProductName" />
                    <input type="hidden" asp-for="Items[i].UnitPrice" />
                </td>
                <td>@Model.Items[i].ProductName</td>
                <td>@Model.Items[i].UnitPrice</td>
                <td>
                    <input asp-for="Items[i].Quantity" class="form-control" min="1" />
                    <span asp-validation-for="Items[i].Quantity" class="text-danger"></span>
                </td>
            </tr>
        }
        </tbody>
    </table>

    <div class="text-danger">
        @Html.ValidationSummary()
    </div>

    <button class="btn btn-success">Save Order</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
